<!-- views/users/show.ejs -->

<!DOCTYPE html>
<html>

<head>
    <%- include('../partials/head') %>
</head>

<body>
    <%- include('../partials/nav') %>

    <br></br>
        <div class="container mb-3">

            <h3 class="contentBoxTop">
                회원정보
            </h3>

            <br></br>

            <form class="user-form" action="/users" method="post">
                <fieldset disabled>
                    <div class="form-group row">
                        <label for="name" class="col-sm-3 col-form-label">아이디</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" id="name" name="name" value="<%= user.name %>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email" class="col-sm-3 col-form-label">E-mail</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" id="email" name="email" value="<%= user.email %>">
                        </div>
                    </div>
                </fieldset>
            </form>

            <br></br>

            <div>
                <% if(isAuthenticated && currentUser.id==user.id){ %>
                    <a class="btn btn-primary" href="/users/<%= user.username %>/edit">수정</a>
                    <% } %>
                        <form action="/users/<%= user.username %>?_method=delete" method="post" class="d-inline">
                            <a class="btn btn-primary" href="javascript:void(0)"
                                onclick="confirm('정말 삭제하시겠습니까?')?this.parentElement.submit():null;">삭제</a>
                        </form>
            </div>
        </div>
</body>

</html>